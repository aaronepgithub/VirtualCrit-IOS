<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        android:onClick="clickMessageBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


    <ScrollView
        android:id="@+id/svSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--NAME-->
            <LinearLayout
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textAlignment="viewStart"
                    android:onClick="clickName"/>

                <TextView
                    android:id="@+id/valueName"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="TIM"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"></TableRow>



            <!--GPS-->
            <LinearLayout
                android:id="@+id/editGPS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    android:textAlignment="viewStart"
                    android:onClick="clickGPS"/>

                <TextView
                    android:id="@+id/valueGPS"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valueSpeedGPS"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="0.00 MPH"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/valueDistanceGPS"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="0.00 Miles"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valueActiveTimeGPS"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/valueAverageSpeedGPS"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="0.0 MPH"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444">
            </TableRow>



            <!--BLE-->
            <LinearLayout
                android:id="@+id/editBLE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="BLE"
                    android:textAlignment="viewStart"
                    android:onClick="clickBLE"/>

                <TextView
                    android:id="@+id/valueBluetoothDevice1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textAlignment="viewStart" />
                <TextView
                    android:id="@+id/valueBluetoothDevice2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textAlignment="viewStart" />
                <TextView
                    android:id="@+id/valueBluetoothDevice3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textAlignment="viewStart" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valueHeartrateBLE"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="0 BPM"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/valueHeartrateAverageBLE"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="00 AVG"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444">
            </TableRow>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/valueRoundButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5 MIN/RND"
                    android:textAlignment="viewStart"
                    android:onClick="clickRoundButton"/>

                <Button
                    android:id="@+id/valueAudio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="AUDIO OFF"
                    android:textAlignment="viewStart"
                    android:onClick="clickAudio"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/valueEditSport"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="BIKE"
                    android:textAlignment="viewStart"
                    android:onClick="clickEditSport"/>

                <Button
                    android:id="@+id/valueEditMaxHR"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="185 MAX HR"
                    android:textAlignment="viewStart"
                    android:onClick="clickEditMaxHR"/>

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444">
            </TableRow>


            <!--START, PAUSE, END-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:textAlignment="viewStart"
                    android:onClick="clickStart" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="PAUSE"
                    android:textAlignment="viewStart"
                    android:onClick="clickPause" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="END"
                    android:textAlignment="viewStart"
                    android:onClick="clickEnd"/>
            </LinearLayout>

            <!--TIMER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/valueTimer"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/activeTimer"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:layout_width="0dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="END"
                    android:textAlignment="center"
                    android:onClick="clickEnd"/>

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444">
            </TableRow>


        </LinearLayout>


    </ScrollView>



<!--DASHBOARD-->
    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHeader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="00:00:00"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvFooter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="00:00:00"
                android:gravity="center"
                android:layout_weight="1"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/llTopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/holo_red_dark"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textSize="70sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="00"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvTop-Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="BPM"
                android:rotation="-90"
                android:layout_weight="2"/>


        </LinearLayout>



    <LinearLayout
        android:id="@+id/llMidView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textSize="90sp"
            android:background="@android:color/holo_red_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="00.0"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvMiddle-Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@android:color/holo_red_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="MPH"
            android:rotation="-90"
            android:layout_weight="2"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/holo_red_dark"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textSize="60sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="000.00"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvBottom-Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="10sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="MILES"
                android:rotation="-90"
                android:layout_weight="2"/>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvHeader2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="00.0 AVG"
                android:gravity="center"
                android:layout_weight="1"/>



            <TextView
                android:id="@+id/tvFooter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="000 AVG"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <!--NOTIFICATIONS TIMELINE-->
    <LinearLayout
        android:id="@+id/llTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/timeline_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>